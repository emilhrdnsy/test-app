<br>
<h3>
    <center><%= heading %></center>
</h3>
<br>

<div class="table-responsive-sm table-hover">
    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="header-center">Kode</th>
                <th scope="col" class="header-center">Masalah</th>
            </tr>
        </thead>
        <tbody>
            <% masalah.forEach((problem_list) => { %>
            <tr>
                <div class="item-data">
                    <th scope="row">
                        <center><span class="code-column"><%= problem_list.kode_masalah %></span></center>
                    </th>
                    <td>
                        <center><span class="name-column"><%= problem_list.nama_masalah %></span></center>
                    </td>
                </div>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>